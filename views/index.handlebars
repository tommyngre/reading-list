<section class="grid-container">
  <h1 class="text-center">My reading list</h1>
  <form>
    <div class="grid-x grid-padding-x">
      <div class="small-12 cell">
        <input type="text" id="item-name" name="item-name" placeholder="Add the name of a book, or a url to an article...">
      </div>
    </div>
    <div class="grid-x grid-padding-x">
      <div class="large-12 cell text-center">
        <button id="add" class="success button" type="submit">add to list</button>
      </div>
    </div>
  </form>
</section>

<section class="grid-container">
  <div class="grid-x grid-padding-x">

    <div class="small-12 medium-6 cell">

      <h1>Reading List</h1>
      <div class="grid-x grid-padding-x">
        <ul>
          {{#each items}} {{#unless is_complete}} {{> items/item-li is_complete=false}} {{/unless}} {{/each}}
        </ul>
      </div>
    </div>
    <div class="small-12 medium-6 cell">

      <h1>Recent reads</h1>
      <div class="grid-x grid-padding-x">
        <ul>
          {{#each items}} {{#if is_complete}} {{> items/item-li iscomplete=true}} {{/if}} {{/each}}
        </ul>
      </div>
    </div>
  </div>
</section>