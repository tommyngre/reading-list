<section>
<h1>Add somethin</h1>
  <div class="form-group">
    <label for="item-name">Name</label>
    <input type="text" id="item-name" name="item-name">
  </div>

  <button id="add" type="submit">Add</button>
</section>

<section>
<h1>Reading List</h1>

<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>
</section>

<section>
<h1>Recent reads</h1>
<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>
</section>